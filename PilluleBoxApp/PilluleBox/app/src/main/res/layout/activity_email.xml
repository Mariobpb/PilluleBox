<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailActivity"
    android:background="@drawable/background1"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Código de confirmación"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Ingrese el código de confirmación enviado a su correo electrónico"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/error_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Error, el código de confirmación de correo electrónico no coincide"
            android:textAlignment="center"
            android:textColor="#ff0000"/>
        <EditText
            android:id="@+id/email_code"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/corners1"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:maxLength="5"
            android:textSize="35dp"
            android:inputType="number"
            android:textColorHint="#000000"/>
        <Button
            android:id="@+id/email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF0000"
            android:text="Confirmar"
            android:textColor="#000000"
            android:textSize="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:textStyle="bold"
            android:text="¿No lo recibió?"
            android:textSize="17dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Enviar otro código"
            android:textSize="18dp"
            android:textColor="#00FCFF"
            android:clickable="true"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>